// Base de datos de libros de Carlota
let myBooks = [];

// Función para mostrar la página
function renderApp() {
    const container = document.getElementById('app-content');
    container.innerHTML = `
        <div class="bg-zinc-900 p-6 rounded-3xl text-center border border-white/5">
            <h2 class="text-xl font-bold mb-2">¡Hola Carlota!</h2>
            <p class="text-stone-400 text-sm">Tu biblioteca está lista para empezar.</p>
            <button class="mt-4 bg-[#4a7a96] px-6 py-2 rounded-full font-bold">Añadir mi primer libro</button>
        </div>
    `;
}

// Esto hace que la app arranque al abrir la web
window.onload = renderApp;
